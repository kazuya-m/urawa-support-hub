{
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2",
    "playwright": "npm:playwright@1.40.0",
    "std/": "https://deno.land/std@0.208.0/",
    "@/": "./src/",
    "@/tests/": "./tests/",
    "date-fns": "https://esm.sh/date-fns@4.1.0",
    "date-fns/locale": "https://esm.sh/date-fns@4.1.0/locale",
    "@date-fns/tz": "https://esm.sh/@date-fns/tz@1.4.1",
    "fast-deep-equal": "npm:fast-deep-equal@3.1.3",
    "@google-cloud/tasks": "npm:@google-cloud/tasks@6.2.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0"
  },
  "tasks": {
    "start": "docker build -f Dockerfile -t urawa-support-hub . && docker run -d --add-host host.docker.internal:host-gateway -e SUPABASE_URL=http://host.docker.internal:54321 --env-file .env --name urawa-support-hub-local -p 8080:8080 -v $(pwd)/src:/app/src urawa-support-hub",
    "stop": "docker stop urawa-support-hub-local && docker rm urawa-support-hub-local",
    "restart": "docker stop urawa-support-hub-local && docker rm urawa-support-hub-local && docker build -f Dockerfile -t urawa-support-hub . && docker run -d --add-host host.docker.internal:host-gateway -e SUPABASE_URL=http://host.docker.internal:54321 --env-file .env --name urawa-support-hub-local -p 8080:8080 -v $(pwd)/src:/app/src urawa-support-hub",
    "dev": "supabase functions serve --debug",
    "logs": "docker logs urawa-support-hub-local",
    "test": "deno test --allow-env --allow-net=127.0.0.1 --coverage=coverage",
    "test:unit": "deno test src/ --coverage=coverage",
    "test:integration": "deno test tests/integration/ --allow-env --allow-net=127.0.0.1 --coverage=coverage",
    "db:reset": "supabase db reset",
    "db:push": "supabase db push",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "pre-commit": "deno check src/ && deno lint && deno fmt --check",
    "demo:data:setup": "deno run --allow-env --allow-net --allow-read scripts/data/setup-test-ticket.ts create",
    "demo:data:cleanup": "deno run --allow-env --allow-net --allow-read scripts/data/setup-test-ticket.ts cleanup",
    "debug:line": "deno run --allow-env --allow-net --allow-read scripts/debug/debug-line-webhook.ts",
    "debug:discord": "deno run --allow-env --allow-net --allow-read scripts/debug/test-discord-notification.ts",
    "debug:cron": "deno run --allow-env --allow-net scripts/debug/check-cron-jobs.ts",
    "demo:notification": "deno run --allow-env --allow-net --allow-read scripts/demo/test-local-notification-endpoint.ts",
    "demo:scraping": "ENABLE_LIVE_SCRAPING=true deno run --allow-env --allow-net --allow-read --allow-write --allow-sys --allow-run scripts/demo/test-scraping.ts",
    "demo:line": "deno run --allow-env --allow-net --allow-read scripts/demo/test-line-broadcast.ts",
    "demo:health": "deno run --allow-env --allow-net scripts/demo/test-health-check.ts",
    "demo:cloud-tasks": "deno run --allow-env --allow-net --allow-read --allow-run scripts/demo/test-cloud-tasks-enqueue.ts",
    "demo:data-transform": "deno run --allow-env scripts/demo/test-data-transformation.ts",
    "demo:collect-ticket": "deno run --allow-env --allow-net --allow-read scripts/demo/test-collect-tickets.ts",
    "demo:collect-ticket-integration": "deno run --allow-env --allow-net --allow-read --allow-write --allow-sys tests/integration/collect-tickets-api-test.ts",
    "demo:ticket-summary": "deno run --allow-net --allow-env --allow-read scripts/demo/test-ticket-summary.ts",
    "demo:full-integration": "deno run --allow-env --allow-net --allow-read --allow-write --allow-sys --allow-run scripts/test/run-full-integration-test.ts",
    "debug:db-tickets": "deno run --allow-env --allow-net --allow-read scripts/debug/check-tickets-db.ts",
    "dev:cloud-run": "deno run --allow-env --allow-net --allow-read --allow-write --allow-sys --allow-run src/main.ts",
    "cloud:dequeue": "deno run --allow-env --allow-net --allow-read --allow-run scripts/cloud/dequeue-test-task.ts"
  },
  "lint": {
    "include": ["src/", "supabase/functions/"],
    "exclude": ["supabase/functions/_shared/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
